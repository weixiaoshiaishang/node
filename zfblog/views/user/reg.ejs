<%- include ../include/header%>
    <form class="form-horizontal"  method="post" action="/users/reg" role="form">
        <div class="form-group">
            <label class="col-md-2 control-label">用户名</label>
            <div class="col-md-8">
                <input class="form-control" type="text" name="username" placeholder="请输入用户名"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">密码</label>
            <div class="col-md-8">
                <input class="form-control" type="password" name="password"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">重输密码</label>
            <div class="col-md-8">
                <input class="form-control" type="password" name="password_repeat" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">邮箱</label>
            <div class="col-md-8">
                <input class="form-control" type="email" name="email" placeholder="请输入邮箱"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-8">
                <button class="btn btn-default" type="submit" />注册</button>
            </div>
        </div>
    </form>
<%- include ../include/footer%>
